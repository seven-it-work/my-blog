/* 侧边栏图标格式设置 */
.fa-bilibili {
  background-image: url('https://gitee.com/GTeam_seven/drawing-bed/raw/master/%E6%8A%80%E6%9C%AF%E5%8D%9A%E5%AE%A2/bilibili.svg');
  background-size: 1em 1em;
  opacity: 0.55;
  background-position: 0.05rem 0.2rem;
  background-repeat: no-repeat;
  height: 1rem;
  width: 1rem;
  border-radius: 0rem;
  /*鼠标停留在图标上时，图标呈现发光效果*/
  &:hover {
      opacity: 1;
    }
}

